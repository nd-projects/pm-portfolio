    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "fumadocs-core": "^15.6.11",
    "fumadocs-mdx": "^11.7.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "markdownlint-cli2": "^0.17.2",
    "prettier": "^3.6.2",
